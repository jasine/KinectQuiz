                                <ImageBrush Stretch="Fill" Opacity="0.8" ImageSource="{Binding NextButtonImage}"></ImageBrush>
                            </k:KinectTileButton.Background>
                            <k:KinectTileButton.Triggers>                              
                                <EventTrigger RoutedEvent="k:KinectCircleButton.Click">
                                    <BeginStoryboard x:Name="SwitchFirst_BeginStoryboard4" Storyboard="{StaticResource SwitchFirst}"/>
                                    <BeginStoryboard x:Name="On_BeginStoryboard4" Storyboard="{StaticResource scrollOut}">
