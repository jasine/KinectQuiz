                            <k:KinectTileButton.Background>
                                <ImageBrush Stretch="Fill" Opacity="0.8" ImageSource="pack://application:,,,/Content/QuestionScreen/buttonUp2.png"></ImageBrush>
                            </k:KinectTileButton.Background>
